{
  "name": "@lernato/common",
  "version": "4.1.1",
  "license": "MIT",
  "description": "JavaScript utilities for writing code the Lernato way.",
  "author": "Lernato, LLC",
  "repository": {
    "type": "git",
    "url": "https://github.com/LernatoLLC/common.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && npm run fix-ts-paths",
    "fix-ts-paths": "node scripts/fix-ts-paths.js",
    "doc": "typedoc --out ../docs/common src/**/*.ts",
    "lint": "eslint ./src --ext .js,.ts",
    "prepush": "npm run build",
    "push": "npm publish --access public",
    "push:major": "npm version major --no-git-tag-version && npm run push",
    "push:minor": "npm version minor --no-git-tag-version && npm run push",
    "push:patch": "npm version patch --no-git-tag-version && npm run push",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --clearCache && jest --coverage --watch"
  },
  "peerDependencies": {
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@types/jasmine": "3.5.5",
    "@types/jest": "25.1.2",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/eslint-plugin-tslint": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsdoc": "21.0.0",
    "eslint-plugin-json": "2.0.1",
    "eslint-plugin-prettier": "3.1.2",
    "import": "0.0.6",
    "jest": "25.1.0",
    "moment": "2.24.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "tslint": "5.20.1",
    "typedoc": "0.16.10",
    "typescript": "3.6.4"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
