{
  "name": "@lernato/common",
  "version": "4.0.0",
  "license": "MIT",
  "description": "JavaScript utilities for writing code the Lernato way.",
  "author": "Lernato, LLC",
  "repository": {
    "type": "git",
    "url": "https://github.com/LernatoLLC/common.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && npm run fix-ts-paths",
    "fix-ts-paths": "node scripts/fix-ts-paths.js",
    "doc": "typedoc --out ../docs/common src/**/*.ts",
    "lint": "tslint --project tsconfig.json 'src/**/*.ts'",
    "prepush": "npm run build",
    "push": "npm publish --access public",
    "push:major": "npm version major --no-git-tag-version && npm run push",
    "push:minor": "npm version minor --no-git-tag-version && npm run push",
    "push:patch": "npm version patch --no-git-tag-version && npm run push",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --clearCache && jest --coverage --watch"
  },
  "dependencies": {
    "inquirer": "7.0.0"
  },
  "devDependencies": {
    "@types/jasmine": "3.4.5",
    "@types/jest": "24.0.21",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "tslint": "5.20.0",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typedoc": "0.15.0",
    "typescript": "3.6.4"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
